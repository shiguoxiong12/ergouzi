/* component/search/index.wxss */
.search-box{
    display: flex;
    width:100%;
    height:70rpx;
    flex-direction: row;
    background-color: white;
    align-items: center;
    justify-content:center;
    color:white;
    padding: 10px 0;
   
    
}
.cancel{
    color:black;
    float: right;
    padding-right: 10px;
}

.search-box .searchPng,.search-box .cancelPng{
    width:40rpx;
    height:40rpx;
    vertical-align: center;
    padding-right: 40rpx;
}
input{
    text-align: center;
}
.search-box .sarch{
    width:90%;
    height:70rpx;
    border:1px solid red;
   
    color:rgb(250, 14, 14);
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 35rpx;

}

.search-box-cancel{
    display: flex;
    width:100%;
    height:100rpx;
    background-color: white;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-right:10px;
    border-bottom:1px solid #ccc;
}
.search-box-cancel .searchPng,.search-box-cancel .cancelPng{
    width:40rpx;
    height:40rpx;
}
.search-box-cancel .sarch{
    width:70%;
    height:70rpx;
    margin:0rpx 20rpx 0rpx 40rpx;
    display: flex;
     flex-direction: row;
    justify-content:space-between;
    padding: 0 10px;
    align-items: center;
    border:1px solid #ccc;
  
    border-radius:35rpx;
}

/* pages/classic/classic.wxss */
.top{
    width:100%;
    box-sizing: border-box;
    display: flex;
    line-height: 80rpx;
    flex-direction: row;
    justify-content: space-between;
    padding:20rpx;
    border-bottom:1px solid #ccc;
    border-top:1px solid #ccc;
}
.movie{
    width:100%;
    height:930rpx;
}
.content{
    height:600rpx;
    padding-top: 100rpx;
    margin-bottom:60rpx;
    text-align: center;
    position: relative;
}
.content image{
    width:100%;
}
.content .title{
    margin: 0 auto;
    color:black;
    text-align: left;
    max-width:570rpx;
    margin-top: 30rpx;
}
.content .type{
   position: relative;
   left:-300rpx;
   top:-250rpx;
}
.control-bar{
    position: absolute;
    bottom:10rpx;
}
.content-wraper{
    display: flex;
    position: relative;
    flex-direction: column;
    align-items: center;
}